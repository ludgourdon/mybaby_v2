{% extends "base.html.twig" %}
{% form_theme form _self %}

{#{% block _birth_birthHour_widget %}#}
{#    <vue-timepicker hide-clear-button v-model="birthHour" name="birth[birthHour]" class="datepicker-form"></vue-timepicker>#}
{#{% endblock %}#}

{% block content %}
<div class="row" id="app">
    <div class="col-sm-4">
        <h2>Naissance</h2>
        {{ form_start(form) }}
        {{ form_row(form.birthDate) }}
        {{ form_row(form.birthPlace) }}
        {{ form_row(form.birthHour)}}
        {{ form_row(form.birthHeight)}}
        {{ form_row(form.birthWeight)}}
        {{ form_end(form) }}

    </div>
    <div  class="col-sm">
        <div id="babyCard">
        {% if photo is defined %}
            <span style="height: 80px;
                    width: 80px;
                    display: inline-block;
                    vertical-align: middle;
                    border-radius: 50%;
                    background:url({{ vich_uploader_asset(photo, 'imageFile') }}) no-repeat;
                    background-size:150%;
                    background-position: center;
                    margin-left: auto;
                    margin-right: auto;">
            </span>
        {%endif%}
        <p>Coucou, je m'appelle {{ baby.firstName }} {{ baby.lastName }}</p>
        <p>Je suis né le ${returnDate(birthDate)} à ${returnHour(birthHour)} à ${birthPlace}</p>
        <p>Je mesure ${birthHeight} ${birthWeight}</p>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('birth') }}
    {{ encore_entry_script_tags('photos') }}
{% endblock %}


